{
    "name": "rescuetime-statusboard",
    "require": {
        "php": ">=5.3.0",
        "borivojevic/rescuetime": "dev-statusboard",
        "silex/silex": "1.*",
        "igorw/config-service-provider": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "autoload": {
        "psr-0": {
            "RescueTimeStatusboard": "src"
        }
    },
    "extra": {
        "heroku": {
            "document-root": "web",
            "index-document": "index.php",
            "php-config": [
                "display_errors=off",
                "date.timezone=Europe/Belgrade"
            ]
        }
    }
}
